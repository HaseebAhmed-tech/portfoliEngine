generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  contact String?
  password String
  description String?
  designation String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resume Resume?
  socials Social?
  stats Json?
  services Service?
  }


model Social{
  id Int @id @default(autoincrement())
  user User? @relation(fields: [userId], references: [id])
  userId Int? @unique
  linkedin String?
  github String?
  instagram String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Stat{
  id Int @id @default(autoincrement())
  // user User? @relation(fields: [userId], references: [id])
  // userId Int? 
  num Int
  text String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Service{
  id Int @id @default(autoincrement())
  user User? @relation(fields: [userId], references: [id])
  userId Int? @unique
  services_list Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Resume{
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  experience_list Experience?
  education_list Education?
  skills_list Skill?
  about_me About?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience{
  id Int @id @default(autoincrement())
  resume Resume? @relation(fields: [resumeId], references: [userId])
  resumeId Int @unique
  experience_list Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Education{
  id Int @id @default(autoincrement())
  resume Resume? @relation(fields: [resumeId], references: [userId])
  resumeId Int @unique
  education_list Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Skill{
  id Int @id @default(autoincrement())
  resume Resume? @relation(fields: [resumeId], references: [userId])
  resumeId Int @unique
  skills_list Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model About{
  id Int @id @default(autoincrement())
  resume Resume? @relation(fields: [resumeId], references: [userId])
  resumeId Int @unique
  name String?
  experience String?
  nationality String?
  freelance String?
  phone String?
  github String?
  email String?
  languages String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}